//====================
// import
// ===================
@import ("smart-grid.styl");
@import ("settings.styl")

//====================
// code
// ===================

.first-header
  background-color: $lightblue
  font-family: "OpenSans-Bold"
  min-height: 45px
  display: flex
  align-items: center
  color #fff
  &__menu
    flex-basis: 60%
    ul
      display: flex
      justify-content: space-around
      li
        position relative
        padding: 10px 50px
        &:hover
          for x in 1 2 3 4
            &:nth-child({x})
              &:after
                border-color #000
          a
            color #000
        for x in 1 2 3 4
          &:nth-child({x})
            &:after
              content ""
              border-right 1px solid #fff
              position absolute
              height: 20px
              right 0
        a
          color #fff
  &__logo
    flex-basis 40%
    margin-left: 25px


.second-header
  background-color: #ffffff
  min-height: 110px
  color $darkGray
  display: flex
  text-transform uppercase
  font-family: "OpenSans-Bold"
  align-items: center
  &__logo
    flex-basis: 50%
    font-size: 40px
    margin-left: 150px
  &__nav
    flex-basis: 50%
    ul
      display: flex
      justify-content: space-around
      li
        a
          color $darkGray

.swiper-container
  width 100%
  max-width: 1280px
  max-height: 720px
  margin 0 auto
  .swiper-slide
    img
      width 100%

main
  min-height: 2000px
  background-color: #ffffff
  text-align: center
  h1
    margin 0
    padding 50px 0
    text-transform uppercase
    color $darkGray
  .items
    row-flex()
    col-12()
    max-width: 1280px
    margin 0 auto
    text-align: center
    .itemBox
      col-3()
      row-flex()
      flex-flow: column wrap
      border 1px solid #333
      padding 10px 5px
      margin: 20px 15px
      position relative
      cursor: pointer
      .itemImg
        overflow: hidden
      .itemTitle
        margin 20px 0
        font-size: 16px
        color $darkGray
      .itemPrice
        color $lemonGreen
        font-size 20px
        line-height: 22px
        margin-bottom: 10px

.offerNow
  background-image url('../img/bgoffer.jpg')
  background-position -450px -750px
  display: flex
  align-items: center
  justify-content: center
  flex-flow: column wrap
  min-height: 250px
  overflow hidden
  h1
    padding 5px
    color #ffffff
  h3
    color #fff
    text-transform uppercase
    font-size: 25px
    margin 0


.discount
  min-height: 200px
  background-color: #fff1f3
  display: flex
  flex-flow: column wrap
  align-items: center
  h1
    padding 25px

.flip-clock-wrapper
  display: flex
  justify-content: center
  margin 0